          +e.A.phone(href="tel:8 800 302 32 14") 8 800 302 32 14
          +e.BUTTON.call.btn-outline_black.js-open-popup Обратный звонок
          +b.basket-mini
            +e.info
              svg(width='25' height='26' fill='none' xmlns='http://www.w3.org/2000/svg')
                path(fill-rule='evenodd' clip-rule='evenodd' d='M5.955 1.583a1 1 0 0 0-.8.4L2.03 6.15a1 1 0 0 0-.2.6v14.583a3.083 3.083 0 0 0 3.084 3.084h14.583a3.083 3.083 0 0 0 3.083-3.084V6.75a1 1 0 0 0-.2-.6l-3.125-4.167a1 1 0 0 0-.8-.4h-12.5Z' fill='#020F19')
