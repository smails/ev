mixin header()
  +b.header
    +e.inner.inner
      +e.top
        +e.left
          +e.A.map(href="#") г. Москва, ул. Нижняя Первомайская, д. 43а, офис 1
          +e.time Пн – Пт 
            span
            | 09:00 – 20:00
        +e.right
          +e.A.mail(href="mailto:order+168830@evro-market.ru") order+168830@evro-market.ru
      +e.middle
        +e.A.logo(href="#")
          +e.IMG.pic(src='/icon/icon-logo.svg' alt='')
        +e.FORM.search
          +e.INPUT.field(type="text" placeholder="Поиск...")
          +e.BUTTON.reset(type="reset")
