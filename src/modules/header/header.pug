        +e.BUTTON.catalog.js-open-catalog
          svg(width='30' height='30' fill='none' xmlns='http://www.w3.org/2000/svg')
            path(d='M4 15h22M4 7.5h22M4 22.5h22' stroke='#fff' stroke-width='2.5' stroke-linecap='round' stroke-linejoin='round')
          span Каталог
        +e.UL.list
          +e.LI.item
            +e.A.link(href="#") Комплексное оснащение
          +e.LI.item
            +e.A.link(href="#") Производство
          +e.LI.item
            +e.A.link(href="#") Дилерам
          +e.LI.item
            +e.A.link(href="#") Портфолио
          +e.LI.item
            +e.A.link(href="#") О заводе
          +e.LI.item
            +e.A.link(href="#") Контакты
